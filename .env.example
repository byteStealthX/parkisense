# Parkinson's Voice Detection - Environment Configuration (ParkiSense)

# ============================================================================
# FRONTEND ENVIRONMENT VARIABLES (React/Vite)
# ============================================================================

# API Backend URL
# Development: http://127.0.0.1:8000
# Production (Vercel): https://parkisense-backend.vercel.app (or your backend URL)
VITE_API_URL=http://127.0.0.1:8000

# Auth API URL (optional, defaults to localhost:5000)
VITE_AUTH_API_URL=http://127.0.0.1:5000

# Environment mode (development, staging, production)
VITE_ENV=development

# Application metadata
VITE_APP_NAME=ParkiSense
VITE_APP_VERSION=3.0.0

# Feature Flags
VITE_ENABLE_ADVANCED_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_LOCAL_MODEL=true

# ============================================================================
# BACKEND ENVIRONMENT VARIABLES (Python/FastAPI)
# ============================================================================

# FastAPI Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Model Configuration
PD_MODEL_PATH=ml/models/best_pd_model.pkl
MODEL_CACHE_ENABLED=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000
MAX_UPLOAD_SIZE_MB=10

# Security
ENABLE_CORS=true
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# DEPLOYMENT TARGETS
# ============================================================================
# For Vercel deployment:
#   Frontend: Automatically handled by Vercel
#   Backend: Deploy separately (Vercel Functions, Railway, Heroku, etc.)
#   Update VITE_API_URL to point to deployed backend URL

